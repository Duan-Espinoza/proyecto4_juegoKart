import { useNavigate } from 'react-router-dom';
import { Button } from '@/components/ui/button';

export default function MenuPrincipal() {
  const navigate = useNavigate();

  return (
    <div className="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-700 via-pink-500 to-red-500">
      <div className="bg-white rounded-2xl shadow-2xl p-10 max-w-md w-full text-center space-y-6 animate-fade-in">
        <h1 className="text-4xl font-extrabold text-gray-800">Luiki Kart</h1>
        <p className="text-gray-500 text-lg">Elige una opción para comenzar</p>

        <div className="space-y-4">
          <Button className="w-full text-lg py-6" onClick={() => navigate('/crear')}>🎮 Crear Partida</Button>
          <Button className="w-full text-lg py-6" onClick={() => navigate('/unirse')}>🚗 Unirse a Partida</Button>
          <Button className="w-full text-lg py-6" onClick={() => navigate('/ranking')}>🏁 Ver Ranking</Button>
          <Button variant="outline" className="w-full text-lg py-6 border-gray-400 text-gray-600 hover:bg-gray-100" onClick={() => window.close()}>❌ Salir</Button>
